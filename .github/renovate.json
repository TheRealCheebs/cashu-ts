{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "enabledManagers": ["dockerfile"],
  "schedule": ["at any time"],
  "packageRules": [
    {
      "matchManagers": ["dockerfile"],
      "matchPackageNames": ["docker.io/cashubtc/nutshell"],
      "groupName": "nutshell-docker",
      "automerge": false,
      "labels": ["renovate", "docker", "nutshell"]
    },
    {
      "matchManagers": ["dockerfile"],
      "matchPackageNames": ["docker.io/cashubtc/mintd"],
      "groupName": "mintd-docker",
      "automerge": false,
      "labels": ["renovate", "docker", "mintd"]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/^Makefile$/"],
      "matchStrings": [
        "(?<depName>cashubtc/(mintd|nutshell)):(?<currentValue>[0-9]+(?:\\.[0-9]+)*[^\\s]*)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "docker.io/{{depName}}",
      "versioningTemplate": "semver"
    }
  ]
}
